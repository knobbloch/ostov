<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="goalSchemeVM" type="com.knobblochsapplication.app.modules.goalscheme.data.viewmodel.GoalSchemeVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearGoalscheme"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:orientation="vertical">
        <LinearLayout android:id="@+id/linearGoalscheme1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_3">
            <androidx.appcompat.widget.Toolbar android:gravity="start"
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:contentInsetStart="0dp" style="@style/groupStyleindigo_52">
                <LinearLayout android:id="@+id/linearRowmenu"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginEnd="@dimen/_28pxh"
                    android:layout_marginStart="@dimen/_19pxh"
                    android:layout_marginTop="@dimen/_23pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageMenu"
                        android:layout_height="@dimen/_17pxh"
                        android:layout_marginBottom="@dimen/_4pxv"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_width="@dimen/_32pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_menu_indigo_900"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_menu_indigo_900"/>

                    <TextView
                        android:id="@+id/txtMygoals"
                        style="@style/txtABeeZeeregular20"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_75pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_weight="0.57"
                        android:ellipsize="end"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:onClick="toTargets"
                        android:singleLine="true"
                        android:text="@{goalSchemeVM.goalSchemeModel.txtMygoals}"
                        tools:text="@string/lbl" />
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSeventyFive"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_65pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.25"
                        android:layout_width="0dp"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:singleLine="true"
                        android:text="@{goalSchemeVM.goalSchemeModel.txtSeventyFive}"
                        style="@style/txtABeeZeeregular20" tools:text="@string/lbl_75"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>


            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1B5E20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zoom Scroll View"
                    android:textSize="32sp" />

            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</layout>
